<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_below="@+id/layout_video">

    <ImageView
        android:id="@+id/iv_video_share"
        android:layout_width="15dp"
        android:layout_height="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:src="@drawable/video_share_black" />

    <com.news.sdk.widget.TextViewExtend
        android:id="@+id/tv_video_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/color3"
        android:textSize="@dimen/font7" />

    <ImageView
        android:id="@+id/iv_video_source_avatarHd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp" />

    <com.news.sdk.widget.TextViewExtend
        android:id="@+id/tve_video_source_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_video_source_avatarHd"
        android:lines="1"
        android:textColor="#9a9a9a"
        android:textSize="@dimen/font7"/>

    <com.news.sdk.widget.TextViewExtend
        android:id="@+id/tve_video_source_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tve_video_source_username"
        android:lines="1"
        android:gravity="center_vertical"
        android:background="@drawable/tag_video_shape"
        android:textColor="#837c78"
        android:textSize="@dimen/font7"
        android:visibility="gone"
        />
</RelativeLayout>