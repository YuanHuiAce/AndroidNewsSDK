<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_below="@+id/layout_video">

    <ImageView
        android:id="@+id/iv_video_share"
        android:layout_width="18dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/btn_detail_right_more" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_video_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_video_share"
        android:textColor="#bebebe"
        android:textSize="12sp" />
</RelativeLayout>