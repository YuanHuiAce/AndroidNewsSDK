<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_user_comment_dialog_height">

    <LinearLayout
        android:id="@+id/mCommentContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_user_comment_et">

        <com.news.sdk.widget.CommentEditText
            android:id="@+id/mCommentContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top|center|left"
            android:hint="写点什么吧..."
            android:lineSpacingMultiplier="1.2"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/comment_cursor_color"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/mCommentCommit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mCommentContentWrapper"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_user_comment_commit"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>