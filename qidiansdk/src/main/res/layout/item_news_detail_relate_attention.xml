<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attentionlayout">

        <LinearLayout
            android:id="@+id/attention_mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27.5dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/attention_onceHave"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>
            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/attention_Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/new_color2"
                android:textSize="@dimen/new_font4"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/attention_MonthandDay"
                android:layout_width="36dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/font5"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="0.5dp"
                />
            <LinearLayout
                android:id="@+id/attention_haveImageShow"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:layout_marginTop="6dp"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/attention_img_View"
                    android:layout_width="85dp"
                    android:layout_height="58dp"
                    android:layout_alignParentRight="true"
                    custom:actualImageScaleType="centerCrop"
                    custom:placeholderImageScaleType="centerCrop"
                    custom:roundBottomLeft="false"
                    custom:roundBottomRight="false"
                    custom:roundTopLeft="false"
                    custom:roundTopRight="false"
                    custom:roundedCornerRadius="2dp"
                    custom:roundingBorderWidth="1px"
                    />
                <LinearLayout
                    android:id="@+id/attention_contentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@+id/attention_img_View"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="8dp">
                    <com.news.yazhidao.widget.TextViewExtend
                        android:id="@+id/attention_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/new_color1"
                        android:textSize="@dimen/new_font10"
                        android:includeFontPadding="false"
                        />

                    <com.news.yazhidao.widget.TextViewExtend
                        android:id="@+id/attention_Source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/new_color3"
                        android:textSize="@dimen/new_font6"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="1dp"
                        />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/attention_bottomLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/new_color4"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"/>




        </LinearLayout>



        <LinearLayout
            android:id="@+id/attention_lineLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true">
            <com.news.yazhidao.widget.DividerView
                android:id="@+id/attention_line1"
                android:layout_width="1px"
                android:layout_height="13dp"
                custom:linecolor="@color/attention_lineColor"
                custom:orientation="vertical"
                custom:dashLength="2dp"
                custom:dashGap="1dp"
                custom:dashThickness="1dp"
                android:layerType="software"
                />
            <ImageView
                android:id="@+id/rounded_imageView1"
                android:layout_width="5.5dp"
                android:layout_height="5.5dp"
                android:background="@drawable/white_relate_onedp_solid" />
            <com.news.yazhidao.widget.DividerView
                android:id="@+id/attention_line2"
                android:layout_width="1px"
                android:layout_height="18dp"
                custom:linecolor="@color/attention_lineColor"
                custom:orientation="vertical"
                custom:dashLength="2dp"
                custom:dashGap="1dp"
                custom:dashThickness="1dp"
                android:layerType="software"
                />
            <ImageView
                android:id="@+id/rounded_imageView2"
                android:layout_width="5.5dp"
                android:layout_height="5.5dp"
                android:background="@drawable/white_relate_onedp_solid" />

        </LinearLayout>

        <com.news.yazhidao.widget.DividerView
            android:id="@+id/attention_line3"
            android:layout_below="@id/attention_lineLayout"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/attention_mainLayout"
            android:layout_toRightOf="@id/attention_lineLayout"
            android:layout_marginLeft="-3.5dp"
            custom:linecolor="@color/attention_lineColor"
            custom:orientation="vertical"
            custom:dashLength="2dp"
            custom:dashGap="1dp"
            custom:dashThickness="1dp"
            android:layerType="software"/>


    </RelativeLayout>

</RelativeLayout>