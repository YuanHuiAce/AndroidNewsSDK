<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.news.sdk.widget.TextViewExtend
        android:id="@+id/close_imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_selector_share_close"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/bg_share_text"
        android:textSize="@dimen/new_font3" />

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/close_imageView"
        android:background="#f6f6f6"
        android:orientation="horizontal">

        <!--<com.news.yazhidao.widget.TextViewExtend-->
            <!--android:id="@+id/accusation_view"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="25dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:drawablePadding="8dp"-->
            <!--android:drawableTop="@drawable/ic_share_accusation"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="举报"-->
            <!--android:textColor="@color/bg_share_text"-->
            <!--android:textSize="@dimen/new_font6" />-->
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/other_layout"
        android:background="#f6f6f6" />

    <ImageView
        android:id="@+id/line_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/other_layout"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/new_color4" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line_layout"
        android:background="#f6f6f6"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</RelativeLayout>