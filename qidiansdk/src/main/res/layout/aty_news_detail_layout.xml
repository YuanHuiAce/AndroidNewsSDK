                <!--android:id="@+id/mDetailCommentPic"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:contentDescription="评论"-->
                <!--android:scaleType="centerInside"-->
                <!--android:src="@drawable/btn_detail_no_comment"-->
                <!--/>-->

