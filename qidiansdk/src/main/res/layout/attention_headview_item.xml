<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_attention_headImage"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:layout_gravity="top|center"
            android:layout_marginTop="44dp"
            android:background="@drawable/detail_attention_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_attention_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="13dp"
            android:text="孙骁骁"
            android:textColor="@android:color/black"
            android:textSize="@dimen/new_font10" />

        <ImageView
            android:id="@+id/img_attention_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/new_color4" />

        <LinearLayout
            android:id="@+id/linear_attention_descrLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/new_color9"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="@color/new_color3"
                android:textSize="@dimen/font3" />

            <TextView
                android:id="@+id/attention_headViewItem_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/new_color1"
                android:textSize="@dimen/new_font11" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_attention_historyLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/new_color4" />

        <TextView
            android:id="@+id/tv_attention_historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="历史文章"
            android:textColor="@color/new_color3"
            android:textSize="@dimen/font3" />

        <TextView
            android:id="@+id/tv_attention_noData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="这个数据源目前没有数据。"
            android:textColor="@color/new_color3"
            android:textSize="@dimen/font3"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>