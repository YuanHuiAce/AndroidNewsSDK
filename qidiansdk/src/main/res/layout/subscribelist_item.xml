<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_color9"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_SubscribeListItem_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <!--app:failureImage="@drawable/search_item_placeholder"-->
        <!--app:placeholderImage="@drawable/search_item_placeholder"-->
        <!--android:scaleType="centerCrop"-->
        <!--app:roundedCornerRadius="5dp"-->
        <!--app:roundBottomRight="true"-->
        <!--app:roundTopLeft="true"-->
        <!--app:roundTopRight="true"-->
        <!--app:roundBottomLeft="true"-->

        <!--/>-->
        <LinearLayout
            android:id="@+id/linear_SubscribeListItem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_SubscribeListItem_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_SubscribeListItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="新闻号"
                android:textColor="@color/bg_share_text"
                android:textSize="@dimen/font2" />

            <TextView
                android:id="@+id/tv_SubscribeListItem_personNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="9.6万人关注"
                android:textColor="@color/new_color3"
                android:textSize="@dimen/font5" />

        </LinearLayout>

        <TextView
            android:id="@+id/mAttention_btn"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mAttentionRightMore"
            android:background="@drawable/unattention_tv_shape"
            android:clickable="true"
            android:gravity="center"
            android:text="关注"
            android:textColor="#ffe71f19"
            android:textSize="@dimen/font5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_color5" />
</LinearLayout>