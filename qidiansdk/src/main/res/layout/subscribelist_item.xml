<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/new_color9"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
        android:id="@+id/img_SubscribeListItem_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
        <!--app:failureImage="@drawable/search_item_placeholder"-->
        <!--app:placeholderImage="@drawable/search_item_placeholder"-->
        <!--android:scaleType="centerCrop"-->
        <!--app:roundedCornerRadius="5dp"-->
        <!--app:roundBottomRight="true"-->
        <!--app:roundTopLeft="true"-->
        <!--app:roundTopRight="true"-->
        <!--app:roundBottomLeft="true"-->

        <!--/>-->
    <LinearLayout
        android:id="@+id/linear_SubscribeListItem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_SubscribeListItem_icon"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tv_SubscribeListItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font2"
            android:text="新闻号"
            android:textColor="@color/bg_share_text"
            android:layout_marginTop="-5dp"
            />
        <TextView
            android:id="@+id/tv_SubscribeListItem_personNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font5"
            android:text="9.6万人关注"
            android:textColor="@color/new_color3"
            android:layout_marginTop="6dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/mAttention_btn"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_toLeftOf="@id/mAttentionRightMore"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:text="关注"
        android:background="@drawable/unattention_tv_shape"
        android:gravity="center"
        android:textColor="#ffe71f19"
        android:textSize="@dimen/font5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_color5"/>
</LinearLayout>