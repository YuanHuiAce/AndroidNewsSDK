<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_news_detail"
                android:paddingLeft="@dimen/detail_padding_left"
                android:paddingRight="@dimen/detail_padding_right"
                android:paddingTop="18dp"
    >

    <TextView
        android:id="@+id/mNewsDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/mNewsDetailTitle"
        android:textColor="@color/black"
        android:textSize="@dimen/font1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/mNewsDetailSourceAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mNewsDetailTitle"
        android:layout_marginRight="8dp"
        android:text="新华网"
        android:textColor="@color/color3"
        android:textSize="@dimen/font4"
        />

</RelativeLayout>