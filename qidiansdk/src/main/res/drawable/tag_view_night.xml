<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp"></corners>
            <solid android:color="@color/color7_night" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3dp"></corners>
            <stroke android:width="2px" android:color="@color/color5_night" />
            <solid android:color="@color/color9_night" />
        </shape>
    </item>
</selector>