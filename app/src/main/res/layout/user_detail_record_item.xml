<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff0efef"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="1小时前"
            android:textColor="@color/new_color3"
            android:textSize="@dimen/font5" />

        <ImageView
            android:id="@+id/del_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="9dp"
            android:clickable="true"
            android:padding="6dp"
            />
        <!--android:src="@drawable/user_detail_record_del_icon_selector"-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/marks_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingLeft="15.0dip"
        >
        <!--android:background="@drawable/center_bg_notation"-->
        <TextView
            android:id="@+id/comment_item_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="@dimen/font2"
            android:text="is"
            android:paddingTop="13dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/new_color1"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/love_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            >

            <ImageButton
                android:id="@+id/love_imagebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="#00000000"



                 />
            <!--android:src="@drawable/list_icon_gif_nor_icon_heart_nor"-->
            <TextView
                android:id="@+id/love_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/new_color7"
                android:textSize="12sp"
                android:paddingTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/original"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"

        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/new_color7"
        android:textSize="@dimen/font3"
        android:paddingBottom="2dp"
        android:paddingRight="3dp"/>
    <!--android:drawableRight="@drawable/notationdetails_icn_more"-->
</LinearLayout>