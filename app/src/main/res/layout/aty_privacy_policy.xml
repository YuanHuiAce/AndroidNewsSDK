<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_privacy_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <RelativeLayout
        android:id="@+id/mPrivacyHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
       >
        <ImageView
            android:id="@+id/mPrivacyLeftBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:padding="14dp"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/tv_privacy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="隐私政策"
            android:textColor="@color/new_color7"
            android:textSize="@dimen/font3" />

        <View
            android:id="@+id/privacy_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:layout_alignParentBottom="true"
           />
    </RelativeLayout>

    <WebView
        android:id="@+id/mPrivacyWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"
        android:layout_below="@id/mPrivacyHeader"
        />
</RelativeLayout>