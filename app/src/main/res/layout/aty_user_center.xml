<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_color9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/common_header_bg">

        <TextView
            android:id="@+id/mSettingLeftBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_left_back_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/btn_left_back"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
            android:textColor="@color/new_color7"
            android:textSize="@dimen/font1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/new_color5" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mCenterUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mCenterUserIcon"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/mCenterUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/new_font2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mCenterComment"
        android:layout_width="match_parent"
        android:layout_height="48.56dp"
        android:layout_below="@id/mCenterUserInfo"
        android:layout_marginTop="79dp"
        android:background="@color/new_color12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:background="@color/new_color5" />

        <ImageView
            android:id="@+id/mCenterCommentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:paddingTop="1dp"
            android:src="@mipmap/ic_user_center_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterCommentIcon"
            android:text="我的评论"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@mipmap/ic_user_center_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mCenterFavorite"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/mCenterComment"
        android:background="@color/new_color12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/news_list_table_devider" />

        <ImageView
            android:id="@+id/mCenterFavoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_user_center_favorite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterFavoriteIcon"
            android:text="我的收藏"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@mipmap/ic_user_center_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mCenterMessage"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/mCenterFavorite"
        android:background="@color/new_color12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/news_list_table_devider" />

        <ImageView
            android:id="@+id/mCenterMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_user_center_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterMessageIcon"
            android:drawablePadding="12dp"
            android:text="我的消息"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@mipmap/ic_user_center_right_arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/new_color5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="86dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mCenterSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_user_center_btn_setting"
            android:gravity="center"
            android:padding="12dp"
            android:text="设置"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font3" />
    </LinearLayout>
</RelativeLayout>