<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mMessageTopLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/mMessageLeftBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_left_back_selector"
            android:clickable="true"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_left_back" />

        <TextView
            android:id="@+id/mMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="消息"
            android:textSize="@dimen/font3" />

    </RelativeLayout>

    <View
        android:id="@+id/mHeaderDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/mMessageTopLayout" />

    <TextView
        android:id="@+id/mMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@mipmap/ic_user_center_no_message"
        android:gravity="center"
        android:text="暂无消息"
        android:textSize="@dimen/font3" />

</RelativeLayout>